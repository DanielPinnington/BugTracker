                        <h3>&nbsp;@Html.DisplayName("Tickets this Week")</h3>
                        <h4><b>&nbsp;@recentTickets.ToString()</b></h4>

                        <h5 style="text-align: center">View and Submit bug tickets.</h5>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <center>
