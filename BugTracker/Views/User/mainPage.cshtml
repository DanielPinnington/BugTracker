@using BugTracker.Models
@model IEnumerable<BugTracker.Models.Ticket>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var grid = new WebGrid(canPage: true, rowsPerPage: 10);
    grid.Bind(source: Model);
}

