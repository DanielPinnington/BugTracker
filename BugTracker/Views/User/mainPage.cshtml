                </th>
                <th>
                    @Html.DisplayNameFor(models => models.CreatedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(models => models.Priorities)
                </th>
                <th>
                    @Html.DisplayNameFor(models => models.CurrentUser)
