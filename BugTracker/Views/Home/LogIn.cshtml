@model BugTracker.Models.EmployeeModel

@{
    ViewBag.Title = "LogIn";
}

<h2>LogIn</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.UsernameID, htmlAttributes: new { @id = "Username" })
